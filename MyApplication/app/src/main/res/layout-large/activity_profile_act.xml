<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.run.Profile_act"
    android:background="@color/buttonA">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pfimage"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/nameView"
        android:text="Name:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"/>

    <TextView
        android:id="@+id/interestsView"
        android:text="Interests:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameView"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/languagesKnownView"
        android:text="Laguages Known:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interestsView"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/languagesLearningView"
        android:text="Languages Learning:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/languagesKnownView"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="See Reviews"
        android:background="@drawable/imageforreview"
        android:onClick="seeReviews"
        android:id="@+id/reviewButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="40dp"
        android:textSize="18dp" />
</RelativeLayout>